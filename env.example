# Server Configuration
PORT=3000
NODE_ENV=production
PRODUCTION_URL=https://server-i81g.onrender.com
BASE_URL=https://server-i81g.onrender.com

# CORS Configuration
CORS_ORIGIN=*

# JWT Secret (REQUIRED - Generate a strong random string)
JWT_SECRET=your-secret-key-here

# PostgreSQL Database Configuration
# Option 1: Use connection string (recommended)
POSTGRES_URL=postgresql://user:password@host:5432/database

# Option 2: Use individual parameters
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=axzora_chat
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres

# MongoDB Configuration
# Option 1: Use connection string (recommended)
MONGO_URI=mongodb+srv://user:password@cluster.mongodb.net/database

# Option 2: Use individual parameters
# MONGO_HOST=localhost
# MONGO_PORT=27017
# MONGO_DB=axzora_chat
# MONGO_USER=admin
# MONGO_PASSWORD=admin

# Redis Configuration
# Option 1: Use connection string (recommended)
REDIS_URL=redis://:password@host:6379

# Option 2: Use individual parameters
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Agora Configuration (for voice/video calls)
AGORA_APP_ID=your-agora-app-id
AGORA_APP_CERTIFICATE=your-agora-app-certificate

# Frontend URL (for invite links, etc.)
FRONTEND_URL=https://axzora-chat.app

# File Upload Configuration
MAX_FILE_SIZE=52428800

